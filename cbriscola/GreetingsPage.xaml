<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cbriscola.GreetingsPage"
             Title="Game Over"
             BackgroundColor="LightBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label x:Name="fpRisultrato" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" />
        <Button Text="No" Clicked="OnCancelFp_Click" Grid.Row="1" Grid.Column="1" />
        <Button x:Name="btnShare" Text="Share" Clicked="OnFPShare_Click" Grid.Row="1" Grid.Column="2" />
    </Grid>
</ContentPage>