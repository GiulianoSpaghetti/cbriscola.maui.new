<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cbriscola.FinePartitaPage"
             Title="Partita finita"
             BackgroundColor="CadetBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label x:Name="Risultato" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"  TextColor="White"/>
        <Button Text="No" Clicked="OnCancel_Click" Grid.Row="1" Grid.Column="1"  TextColor="White"/>
        <Button x:Name="Condividi" Text="Condividi" Clicked="OnShare_Click" Grid.Row="1" Grid.Column="2"  TextColor="White"/>
    </Grid>
</ContentPage>