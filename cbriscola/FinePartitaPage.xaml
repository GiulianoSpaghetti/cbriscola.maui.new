<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cbriscola.FinePartitaPage"
             Title="FinePartitaPage">
    <Grid x:Name="FinePartita" IsVisible="false">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label x:Name="Risultrato" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" />
        <Button Text="Cancel" Clicked="OnCancel_Click" Grid.Row="1" Grid.Column="1" />
        <Button Text="Share" Clicked="OnShare_Click" Grid.Row="1" Grid.Column="2" />
    </Grid>
</ContentPage>