            <Image x:Name="n11" Source="n11.png" IsVisible="false"/>
            <Image x:Name="n12" Source="n12.png" IsVisible="false"/>
            <Image x:Name="n13" Source="n13.png" IsVisible="false"/>
            <Image x:Name="n14" Source="n14.png" IsVisible="false"/>
            <Image x:Name="n15" Source="n15.png" IsVisible="false"/>
            <Image x:Name="n16" Source="n16.png" IsVisible="false"/>
            <Image x:Name="n17" Source="n17.png" IsVisible="false"/>
            <Image x:Name="n18" Source="n18.png" IsVisible="false"/>
            <Image x:Name="n19" Source="n19.png" IsVisible="false"/>
            <Image x:Name="n20" Source="n20.png" IsVisible="false"/>
            <Image x:Name="n21" Source="n21.png" IsVisible="false"/>
            <Image x:Name="n22" Source="n22.png" IsVisible="false"/>
            <Image x:Name="n23" Source="n23.png" IsVisible="false"/>
            <Image x:Name="n24" Source="n24.png" IsVisible="false"/>
            <Image x:Name="n25" Source="n25.png" IsVisible="false"/>
            <Image x:Name="n26" Source="n26.png" IsVisible="false"/>
